<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffff0"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mes évènements"
        android:textColor="@android:color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <Button
        android:id="@+id/button15"
        android:onClick="goEventActivity1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/commun_button"


        android:onClick="goEventActivity"
        android:shadowColor="@android:color/black"
        android:text=""
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button16"
        android:layout_marginTop="35dp"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:onClick="goEventActivity2"
        android:background="@drawable/commun_button"
        android:onClick="goEventActivity"

        android:text=""
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/button15"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/button17"
        android:onClick="goEventActivity3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/commun_button"

        android:text=""
        android:textColor="#09244B"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/button16" />

    <Button
        android:id="@+id/button18"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:onClick="goEventActivity4"
        android:background="@drawable/commun_button"

        android:onClick="goEventActivity"
        android:text=""
        android:textColor="#27650B"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/button17" />

    <Button
        android:id="@+id/button19"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:onClick="goEventActivity5"
        android:layout_marginTop="35dp"
        android:background="@drawable/commun_button"
        android:text=""
        android:textColor="#A73D7B"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/button18"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/button23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/call_to_action"
        android:onClick="goEventCreateActivity"
        android:paddingLeft="10dp"

        android:paddingRight="10dp"
        android:text="Créer un évènement"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />


</androidx.constraintlayout.widget.ConstraintLayout>





