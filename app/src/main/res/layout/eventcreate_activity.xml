<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffff0"
    tools:context=".EventCreateActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">





            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/textViewEvenement"
                tools:layout_editor_absoluteX="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:gravity="right"
                        android:padding="10dip">

                        <Button
                            android:id="@+id/button24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/commun_button"

                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="20dp"
                            android:onClick="goMainActivity"
                            android:text="Main"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_bias="0.073"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.021" />

                        <Button
                            android:id="@+id/button25"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/commun_button"

                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="20dp"
                            android:onClick="back"
                            android:text="Retour"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_bias="0.944"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.021" />

                    </RelativeLayout>

                <TextView
                    android:id="@+id/textViewEvenement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Création d'un évènement"
                    android:textColor="@android:color/black"
                    android:textSize="24dp"
                    android:textStyle="italic"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/nom"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="nom"
                    android:paddingLeft="10dp"
                    android:textColorHint="#000"
                    android:textSize="22dp"
                    tools:layout_editor_absoluteX="80dp"
                    tools:layout_editor_absoluteY="184dp"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/date"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="date"
                    android:paddingLeft="10dp"
                    android:textColorHint="#000"
                    android:textSize="22dp"
                    tools:layout_editor_absoluteX="84dp"
                    tools:layout_editor_absoluteY="261dp"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/lieu"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="lieu"
                    android:paddingLeft="10dp"
                    android:textColorHint="#000"
                    android:textSize="22dp"
                    tools:layout_editor_absoluteX="84dp"
                    tools:layout_editor_absoluteY="340dp"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/heure"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="heure"
                    android:paddingLeft="10dp"
                    android:textColorHint="#000"
                    android:textSize="22dp"
                    tools:layout_editor_absoluteX="84dp"
                    tools:layout_editor_absoluteY="413dp"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/description"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="description"
                    android:paddingLeft="10dp"
                    android:textColorHint="#000"
                    android:textSize="22dp"
                    tools:layout_editor_absoluteX="84dp"
                    tools:layout_editor_absoluteY="481dp"
                    android:layout_gravity="center"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/textViewFournitures"
                tools:layout_editor_absoluteX="-84dp">

                <TextView
                    android:id="@+id/textViewFournitures"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="Fournitures nécessaires"
                    android:textColor="@android:color/black"
                    android:textSize="24dp"
                    android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    app:layout_constraintVertical_bias="0.067" />

                <EditText
                    android:id="@+id/produit1"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="produit"
                    android:paddingLeft="10dp"
                    android:textColorHint="#000"
                    android:textSize="22dp"
                    tools:layout_editor_absoluteX="80dp"
                    tools:layout_editor_absoluteY="184dp" />

                <EditText
                    android:id="@+id/produit2"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="produit"
                    android:paddingLeft="10dp"
                    android:textColorHint="#000"
                    android:textSize="22dp"
                    tools:layout_editor_absoluteX="84dp"
                    tools:layout_editor_absoluteY="261dp" />

                <EditText
                    android:id="@+id/produit3"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="produit"
                    android:paddingLeft="10dp"
                    android:textColorHint="#000"
                    android:textSize="22dp"
                    tools:layout_editor_absoluteX="84dp"
                    tools:layout_editor_absoluteY="340dp" />

                <EditText
                    android:id="@+id/produit4"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="produit"
                    android:paddingLeft="10dp"
                    android:textColorHint="#000"
                    android:textSize="22dp"
                    tools:layout_editor_absoluteX="84dp"
                    tools:layout_editor_absoluteY="413dp" />

                <EditText
                    android:id="@+id/produit5"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="produit"
                    android:paddingLeft="10dp"
                    android:textColorHint="#000"
                    android:textSize="22dp"
                    tools:layout_editor_absoluteX="84dp"
                    tools:layout_editor_absoluteY="481dp" />

                <EditText
                    android:id="@+id/produit6"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="produit"
                    android:paddingLeft="10dp"
                    android:textColorHint="#000"
                    android:textSize="22dp"
                    tools:layout_editor_absoluteX="80dp"
                    tools:layout_editor_absoluteY="184dp" />

                <EditText
                    android:id="@+id/produit7"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="produit"
                    android:paddingLeft="10dp"
                    android:textColorHint="#000"
                    android:textSize="22dp"
                    tools:layout_editor_absoluteX="84dp"
                    tools:layout_editor_absoluteY="261dp" />

                <EditText
                    android:id="@+id/produit8"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="produit"
                    android:paddingLeft="10dp"
                    android:textColorHint="#000"
                    android:textSize="22dp"
                    tools:layout_editor_absoluteX="84dp"
                    tools:layout_editor_absoluteY="340dp" />

                <EditText
                    android:id="@+id/produit9"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="produit"
                    android:paddingLeft="10dp"
                    android:textColorHint="#000"
                    android:textSize="22dp"
                    tools:layout_editor_absoluteX="84dp"
                    tools:layout_editor_absoluteY="413dp" />

                <EditText
                    android:id="@+id/produit10"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="produit"
                    android:paddingLeft="10dp"
                    android:textColorHint="#000"
                    android:textSize="22dp"
                    tools:layout_editor_absoluteX="84dp"
                    tools:layout_editor_absoluteY="481dp" />

                <Button
                    android:id="@+id/button26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/call_to_action"

                    android:onClick="saveEventAndGoMainActivity"
                    android:text="Créer"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.500"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.993" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>